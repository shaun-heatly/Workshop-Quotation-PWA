{
  "name": "workshop-quotation-pwa",
  "version": "1.0.0",
  "description": "Desktop PWA for workshop quotations with cutting optimization",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "start": "turbo run start",
    "lint": "turbo run lint",
    "type-check": "turbo run type-check",
    "dev:website": "cd apps/website && npm run dev",
    "dev:app": "cd apps/desktop-app && npm run dev",
    "build:website": "cd apps/website && npm run build",
    "build:app": "cd apps/desktop-app && npm run build",
    "test:unit": "turbo run test",
    "test:e2e": "cd apps/desktop-app && npm run test:e2e",
    "setup": "npm install && cd apps/website && npm install && cd ../desktop-app && npm install",
    "clean": "rm -rf node_modules apps/*/node_modules packages/*/node_modules && rm -rf apps/*/.next"
  },
  "devDependencies": {
    "turbo": "^1.11.0",
    "@types/node": "^20.10.0",
    "typescript": "^5.3.0",
    "eslint": "^8.55.0",
    "prettier": "^3.1.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}